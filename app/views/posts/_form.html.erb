<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label "Title" %> <br />
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label "Content" %> <br />
    <%= f.text_area :content %>
  </div>
  <%= f.submit "Submit", :class => "btn btn-default", :data => { :disable_with => "Submitting..."} %>
<% end %>
