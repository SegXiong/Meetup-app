  <%= form_for @post do |f| %>
    <% if @post.errors.any? %>
      <div class="errors">
        <h4><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h4>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label "Title" %> <br />
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label "Content" %> <br />
      <%= f.text_area :content %>
    </div>
    <%= f.submit "Submit", :class => "btn btn-default", :data => { :disable_with => "Submitting..."} %>
  <% end %>
